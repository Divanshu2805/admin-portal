<!DOCTYPE html>
<html>
<head>
    <title>All Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2>All Users</h2>
        <table class="table table-bordered table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.status %></td>
                    <td>
                        <a href="/user/<%= user._id %>" class="btn btn-primary btn-sm">View</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/dashboard" class="btn btn-primary mt-3">Dashboard</a>
    </div>
</body>
</html>
